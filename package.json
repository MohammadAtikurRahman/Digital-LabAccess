{
  "name": "dlab-app-2",
  "version": "1.0.0",
  "description": "A simple smart monitoring tools",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.yourcompany.yourapp",
    "productName": "dlab-app",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "controllers/**/*",
      "models/**/*",
      "databases/**/*",
      "routes/**/*",
      "package.json",
      "app.js",
      "build/**/*",
      "index.html",
      "logotray.png"
    ],
    "asar": true,
    "asarUnpack": [
      "logotray.png",
      "build/**/*",
      "databases/**/*"
    ],
    "win": {
      "icon": "logoexe.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ]
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "electron-is-dev": "^2.0.0",
    "electron-settings": "^4.0.2",
    "express": "^4.18.2",
    "moment": "^2.30.1",
    "mongodb": "^6.3.0",
    "mongodb-memory-server": "^5.0.0",
    "mongoose": "^8.1.0",
    "multer": "^1.4.5-lts.1",
    "nedb": "^1.8.0"
  },
  "devDependencies": {
    "concurrently": "^6.5.1",
    "electron": "^9.4.4",
    "electron-builder": "^24.12.0"
  }
}
